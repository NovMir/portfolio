---
import BaseLayout from '../../layouts/ScrollLayout.astro';
import ProjectPreview from '../../components/ProjectPreview.astro';
import { getCollection } from 'astro:content';
import { sortItemsByDateDesc } from '../../js/utils';

const projects = await getCollection('projects');
const sortedProjects = projects.sort(sortItemsByDateDesc);
---

<BaseLayout title="Portfolio" description="Explore my portfolio of projects">
  <div class="container mx-auto px-4 py-16">
    <h1 class="text-4xl font-serif italic text-pink-700 dark:text-softpink mb-8">Portfolio</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {sortedProjects.map((project) => (
        <ProjectPreview project={project} />
      ))}
    </div>
  </div>
</BaseLayout>